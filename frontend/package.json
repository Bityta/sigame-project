{
  "name": "sigame-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "SIGame 2.0 Web Frontend",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
