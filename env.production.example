# ==============================================
# SIGame Production Environment Configuration
# ==============================================
# Copy this file to .env.production and update with actual values
# This file will be generated automatically by quick-deploy.sh

# ==============================================
# SERVER IPs (auto-filled by deployment script)
# ==============================================

APP_SERVER_IP=YOUR_APP_SERVER_EXTERNAL_IP
INFRA_SERVER_IP=YOUR_INFRA_SERVER_INTERNAL_IP

# ==============================================
# POSTGRESQL DATABASES
# ==============================================

# Auth Service Database
AUTH_DB_NAME=auth_db
AUTH_DB_USER=authuser
AUTH_DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Lobby Service Database
LOBBY_DB_NAME=lobby_db
LOBBY_DB_USER=lobbyuser
LOBBY_DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Pack Management Database
PACKS_DB_NAME=packs_db
PACKS_DB_USER=packsuser
PACKS_DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Game Database
GAME_DB_NAME=game_db
GAME_DB_USER=gameuser
GAME_DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ==============================================
# REDIS
# ==============================================

REDIS_HOST=${INFRA_SERVER_IP}
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_MAX_MEMORY=512mb
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# ==============================================
# KAFKA
# ==============================================

KAFKA_BOOTSTRAP_SERVERS=${INFRA_SERVER_IP}:9092

# ==============================================
# MINIO / S3
# ==============================================

MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD
MINIO_API_URL=http://${INFRA_SERVER_IP}:9000
MINIO_CONSOLE_URL=http://${INFRA_SERVER_IP}:9001

# S3 Buckets
S3_BUCKET_PACKS=sigame-packs
S3_BUCKET_MEDIA=sigame-media

# ==============================================
# JWT CONFIGURATION
# ==============================================

# IMPORTANT: Generate a strong secret with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_TO_RANDOM_64_BYTE_STRING
JWT_ACCESS_TOKEN_TTL=3600
JWT_REFRESH_TOKEN_TTL=604800

# ==============================================
# MONITORING
# ==============================================

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD
GRAFANA_PORT=3000

# Prometheus
PROMETHEUS_PORT=9090

# ==============================================
# APPLICATION SERVICES
# ==============================================

# Auth Service
AUTH_SERVICE_PORT=8001
AUTH_SERVICE_HOST=${APP_SERVER_IP}

# Lobby Service
LOBBY_SERVICE_PORT=8002
LOBBY_SERVICE_HOST=${APP_SERVER_IP}

# Game Session Service
GAME_SESSION_SERVICE_PORT=8003
GAME_SESSION_SERVICE_HOST=${APP_SERVER_IP}

# Pack Management Service
PACK_SERVICE_PORT=8005
PACK_SERVICE_HOST=${APP_SERVER_IP}

# ==============================================
# PRODUCTION SETTINGS
# ==============================================

# Environment
NODE_ENV=production
GO_ENV=production
PYTHON_ENV=production
GIN_MODE=release

# Debug
DEBUG=false
LOG_LEVEL=info

# ==============================================
# NOTES
# ==============================================
# 
# Security Best Practices:
# 1. Change ALL passwords to strong random values
# 2. Use: openssl rand -base64 32  to generate passwords
# 3. Never commit .env.production to git (it's in .gitignore)
# 4. Backup this file securely
# 5. Rotate passwords regularly
#
# The quick-deploy.sh script will generate secure random passwords
# automatically and fill in the server IPs.
#

