{
  "title": "üîê Auth Service",
  "uid": "auth-service",
  "tags": ["sigame", "auth", "backend"],
  "timezone": "browser",
  "refresh": "10s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "editable": true,
  "graphTooltip": 1,
  "panels": [
    {
      "id": 1,
      "title": "‚úÖ Success Requests (2xx) by Endpoint",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"auth-service\",status=~\"2..\",endpoint!~\"/health|/metrics\"}[1m])) by (endpoint)",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "axisPlacement": "auto",
            "fillOpacity": 20,
            "gradientMode": "opacity",
            "lineWidth": 2,
            "showPoints": "never"
          },
          "unit": "reqps"
        },
        "overrides": []
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom", "calcs": ["mean", "lastNotNull"]},
        "tooltip": {"mode": "multi", "sort": "desc"}
      }
    },
    {
      "id": 2,
      "title": "‚ö†Ô∏è Client Errors (4xx) by Endpoint",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0},
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"auth-service\",status=~\"4..\",endpoint!~\"/health|/metrics\"}[1m])) by (endpoint)",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "axisPlacement": "auto",
            "fillOpacity": 30,
            "gradientMode": "opacity",
            "lineWidth": 2,
            "showPoints": "auto"
          },
          "unit": "reqps"
        },
        "overrides": [
          {
            "matcher": {"id": "byName"},
            "properties": [
              {"id": "color", "value": {"mode": "fixed", "fixedColor": "yellow"}}
            ]
          }
        ]
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom", "calcs": ["mean", "lastNotNull"]},
        "tooltip": {"mode": "multi", "sort": "desc"}
      }
    },
    {
      "id": 3,
      "title": "üî• Server Errors (5xx) by Endpoint",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0},
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"auth-service\",status=~\"5..\",endpoint!~\"/health|/metrics\"}[1m])) by (endpoint)",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "fixed", "fixedColor": "red"},
          "custom": {
            "axisPlacement": "auto",
            "fillOpacity": 40,
            "gradientMode": "opacity",
            "lineWidth": 3,
            "showPoints": "always"
          },
          "unit": "reqps"
        }
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom", "calcs": ["mean", "lastNotNull"]},
        "tooltip": {"mode": "multi", "sort": "desc"}
      }
    },
    {
      "id": 4,
      "title": "üìä Total Request Rate by Endpoint",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"auth-service\",endpoint!~\"/health|/metrics\"}[1m])) by (endpoint)",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "axisPlacement": "auto",
            "fillOpacity": 25,
            "gradientMode": "hue",
            "lineWidth": 2,
            "showPoints": "never"
          },
          "unit": "reqps"
        }
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom", "calcs": ["mean", "lastNotNull", "max"]},
        "tooltip": {"mode": "multi", "sort": "desc"}
      }
    },
    {
      "id": 5,
      "title": "‚è±Ô∏è Response Time (p50, p95, p99) by Endpoint",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=\"auth-service\",endpoint!~\"/health|/metrics\"}[1m])) by (le, endpoint))",
          "legendFormat": "{{endpoint}} (p50)",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"auth-service\",endpoint!~\"/health|/metrics\"}[1m])) by (le, endpoint))",
          "legendFormat": "{{endpoint}} (p95)",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=\"auth-service\",endpoint!~\"/health|/metrics\"}[1m])) by (le, endpoint))",
          "legendFormat": "{{endpoint}} (p99)",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "axisPlacement": "auto",
            "fillOpacity": 15,
            "gradientMode": "none",
            "lineWidth": 2,
            "showPoints": "never"
          },
          "unit": "s",
          "decimals": 3
        }
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "right", "calcs": ["mean", "lastNotNull", "max"]},
        "tooltip": {"mode": "multi", "sort": "none"}
      }
    },
    {
      "id": 6,
      "title": "üë• Active Sessions",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "auth_active_sessions",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "blue", "value": null},
              {"color": "green", "value": 1},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 100}
            ]
          },
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "orientation": "auto",
        "textMode": "value_and_name",
        "reduceOptions": {"values": false, "calcs": ["lastNotNull"]}
      }
    },
    {
      "id": 7,
      "title": "üë§ Total Users",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 6, "y": 16},
      "targets": [
        {
          "expr": "auth_total_users",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "blue", "value": null},
              {"color": "green", "value": 10},
              {"color": "orange", "value": 100}
            ]
          },
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "orientation": "auto",
        "textMode": "value_and_name",
        "reduceOptions": {"values": false, "calcs": ["lastNotNull"]}
      }
    },
    {
      "id": 8,
      "title": "üîå gRPC Request Rate",
      "type": "timeseries",
      "gridPos": {"h": 6, "w": 12, "x": 12, "y": 16},
      "targets": [
        {
          "expr": "sum(rate(grpc_requests_total{job=\"auth-service\"}[1m])) by (method, status)",
          "legendFormat": "{{method}} ({{status}})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "axisPlacement": "auto",
            "fillOpacity": 20,
            "gradientMode": "opacity",
            "lineWidth": 2,
            "showPoints": "never"
          },
          "unit": "reqps"
        }
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "right"},
        "tooltip": {"mode": "multi", "sort": "desc"}
      }
    }
  ]
}
