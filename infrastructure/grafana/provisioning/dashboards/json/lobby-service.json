{
  "title": "Lobby Service",
  "uid": "lobby-service",
  "tags": ["sigame", "lobby", "backend"],
  "timezone": "browser",
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "HTTP Requests (2xx)",
      "type": "graph",
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count{job=\"lobby-service\",status=~\"2..\"}[5m])",
          "legendFormat": "2xx - {{method}} {{uri}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "reqps", "label": "Requests/sec"},
        {"format": "short"}
      ]
    },
    {
      "id": 2,
      "title": "HTTP Requests (4xx)",
      "type": "graph",
      "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0},
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count{job=\"lobby-service\",status=~\"4..\"}[5m])",
          "legendFormat": "4xx - {{method}} {{uri}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "reqps", "label": "Requests/sec"},
        {"format": "short"}
      ]
    },
    {
      "id": 3,
      "title": "HTTP Requests (5xx)",
      "type": "graph",
      "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0},
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count{job=\"lobby-service\",status=~\"5..\"}[5m])",
          "legendFormat": "5xx - {{method}} {{uri}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "reqps", "label": "Requests/sec"},
        {"format": "short"}
      ]
    },
    {
      "id": 4,
      "title": "RPS (Total Requests Per Second)",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{job=\"lobby-service\"}[5m]))",
          "legendFormat": "Total RPS",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "reqps", "label": "Requests/sec"},
        {"format": "short"}
      ]
    },
    {
      "id": 5,
      "title": "Request Latency (p50, p95, p99)",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_sum{job=\"lobby-service\"}[5m]) / rate(http_server_requests_seconds_count{job=\"lobby-service\"}[5m])",
          "legendFormat": "avg",
          "refId": "A"
        },
        {
          "expr": "http_server_requests_seconds_max{job=\"lobby-service\"}",
          "legendFormat": "max",
          "refId": "B"
        }
      ],
      "yaxes": [
        {"format": "s", "label": "Duration"},
        {"format": "short"}
      ]
    },
    {
      "id": 6,
      "title": "Active Rooms",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "lobby_active_rooms",
          "refId": "A"
        }
      ]
    },
    {
      "id": 7,
      "title": "Active Players",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 16},
      "targets": [
        {
          "expr": "lobby_active_players",
          "refId": "A"
        }
      ]
    },
    {
      "id": 8,
      "title": "Rooms Created",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 16},
      "targets": [
        {
          "expr": "lobby_rooms_created_total",
          "refId": "A"
        }
      ]
    },
    {
      "id": 9,
      "title": "Rooms Started",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 16},
      "targets": [
        {
          "expr": "lobby_rooms_started_total",
          "refId": "A"
        }
      ]
    },
    {
      "id": 10,
      "title": "Room Events",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
      "targets": [
        {
          "expr": "rate(lobby_rooms_created_total[5m])",
          "legendFormat": "Created",
          "refId": "A"
        },
        {
          "expr": "rate(lobby_rooms_started_total[5m])",
          "legendFormat": "Started",
          "refId": "B"
        },
        {
          "expr": "rate(lobby_rooms_cancelled_total[5m])",
          "legendFormat": "Cancelled",
          "refId": "C"
        }
      ],
      "yaxes": [
        {"format": "ops", "label": "Events/sec"},
        {"format": "short"}
      ]
    },
    {
      "id": 11,
      "title": "gRPC Requests",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
      "targets": [
        {
          "expr": "rate(lobby_grpc_calls_total[5m])",
          "legendFormat": "{{method}} - {{status}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "reqps", "label": "Requests/sec"},
        {"format": "short"}
      ]
    }
  ]
}

