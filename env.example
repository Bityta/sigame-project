# ==============================================
# SIGame 2.0 - Environment Configuration
# ==============================================
# Copy this file to .env and update values as needed

# ==============================================
# POSTGRESQL DATABASES
# ==============================================

# Auth Service Database
AUTH_DB_NAME=auth_db
AUTH_DB_USER=authuser
AUTH_DB_PASSWORD=authpass
AUTH_DB_HOST=localhost
AUTH_DB_PORT=5432

# Lobby Service Database
LOBBY_DB_NAME=lobby_db
LOBBY_DB_USER=lobbyuser
LOBBY_DB_PASSWORD=lobbypass
LOBBY_DB_HOST=localhost
LOBBY_DB_PORT=5433

# Pack Management Database
PACKS_DB_NAME=packs_db
PACKS_DB_USER=packsuser
PACKS_DB_PASSWORD=packspass
PACKS_DB_HOST=localhost
PACKS_DB_PORT=5434

# ==============================================
# REDIS
# ==============================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_MAX_MEMORY=512mb
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# ==============================================
# KAFKA
# ==============================================

KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_AUTO_CREATE_TOPICS=false

# ==============================================
# MINIO / S3
# ==============================================

MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_API_URL=http://localhost:9000
MINIO_CONSOLE_URL=http://localhost:9001

# S3 Buckets
S3_BUCKET_PACKS=sigame-packs
S3_BUCKET_MEDIA=sigame-media

# ==============================================
# MONITORING
# ==============================================

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_PORT=3000

# ==============================================
# APPLICATION SERVICES (for future use)
# ==============================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_TTL=3600
JWT_REFRESH_TOKEN_TTL=604800

# API Gateway
API_GATEWAY_PORT=8080

# Auth Service
AUTH_SERVICE_PORT=8001
AUTH_SERVICE_HOST=localhost

# Lobby Service
LOBBY_SERVICE_PORT=8002
LOBBY_SERVICE_HOST=localhost

# Game Session Service
GAME_SESSION_SERVICE_PORT=8003
GAME_SESSION_SERVICE_HOST=localhost

# Media Streaming Service
MEDIA_SERVICE_PORT=8004
MEDIA_SERVICE_HOST=localhost

# Pack Management Service
PACK_SERVICE_PORT=8005
PACK_SERVICE_HOST=localhost

# Presence Service
PRESENCE_SERVICE_PORT=8006
PRESENCE_SERVICE_HOST=localhost

# Notification Service
NOTIFICATION_SERVICE_PORT=8007
NOTIFICATION_SERVICE_HOST=localhost

# Analytics Service
ANALYTICS_SERVICE_PORT=8008
ANALYTICS_SERVICE_HOST=localhost

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================

# Environment
NODE_ENV=development
GO_ENV=development
PYTHON_ENV=development

# Debug
DEBUG=true
LOG_LEVEL=debug

